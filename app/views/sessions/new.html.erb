<section id="login">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="form-wrap">
          <%= form_tag do %>
          <% if flash[:alert] %>
            <p id="notice"><%= flash[:alert] %></p>
          <% end %>
          <div class="form-group">
            <%= label_tag :name, 'Name:', class: 'sr-only' %>
            <%= text_field_tag :name, params[:name], class: 'form-control', placeholder: 'Username' %>
          </div>
          <div class="form-group">
            <%= label_tag :password, 'Password', class: 'sr-only' %>
            <%= password_field_tag :password, params[:password], class: 'form-control', placeholder: 'Password' %>
          </div>
            <%= submit_tag "Log in", id: 'btn-login', class: 'btn btn-custom btn-block' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
